# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#registroMedicion
GET /registros controllers.RegistroMedicionController.find()

POST /registros controllers.RegistroMedicionController.create()

GET /registros/:id controllers.RegistroMedicionController.findById(id:String)

DELETE /registros/:id controllers.RegistroMedicionController.destroy(id:String)

#VariableAmbiental
GET /variablesAmbientales controllers.VariableAmbientalController.find()

POST /variablesAmbientales controllers.VariableAmbientalController.create()

GET /variablesAmbientales/:id controllers.VariableAmbientalController.findById(id:String)

DELETE /variablesAmbientales/:id controllers.VariableAmbientalController.destroy(id:String)

